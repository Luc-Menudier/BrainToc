<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.marcon.valentin.gphygame.MainActivity">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_logoMain"
            android:src="@drawable/app_logo"
            android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="play1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logogame1"
                android:src="@drawable/game1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="1"
                android:contentDescription="LogoOfTheGame"
                android:layout_rowSpan="3"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-Choose the right-"
                    android:id="@+id/Name1"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:textSize="25dp"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir la bonne image parmis les deux proposées et acumuler les points"
                    android:id="@+id/Desc1"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textSize="20dp"
                    android:padding="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logogame2"
                android:src="@drawable/game2"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="1"
                android:contentDescription="LogoOfTheGame"
                android:layout_rowSpan="2"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-Dot Cloud-"
                    android:id="@+id/Name2"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textSize="25dp"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir le coté contenant le plus de points"
                    android:id="@+id/Desc2"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textSize="20dp"
                    android:padding="5dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
