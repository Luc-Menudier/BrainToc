<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.marcon.valentin.gphygame.MainActivity"
    android:background="#000000">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_logoMain"
            android:src="@drawable/app_logo"
            android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            android:onClick="play1"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logogame1"
                android:src="@drawable/game1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="1"
                android:contentDescription="LogoOfTheGame"
                android:layout_rowSpan="3"
                android:padding="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-Choisir le bon-"
                    android:id="@+id/Name1"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vous devez choisir le symbole qui vous rapporte le plus de points.
Attention ! Le symbole qui vous rapporte le plus de point change au cours du temps !
A vous donc de vous adapter pour gagner un maximum de points"
                    android:id="@+id/Desc1"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:onClick="play2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logogame2"
                android:src="@drawable/game2"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="1"
                android:contentDescription="LogoOfTheGame"
                android:layout_rowSpan="2"
                android:padding="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-Nuage de points-"
                    android:id="@+id/Name2"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choisir le cotÃ© contenant le plus de points"
                    android:id="@+id/Desc2"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
